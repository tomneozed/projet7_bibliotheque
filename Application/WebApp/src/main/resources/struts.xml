<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="login" namespace="/" extends="struts-default">

        <action name="login"
                class="com.action.LoginAction">
            <result name="success">/jsp/account.jsp</result>
            <result name="login">/jsp/login.jsp</result>
            <result name="input">/jsp/login.jsp</result>
        </action>
    </package>

    <package name="loans" namespace="/loans" extends="struts-default">
        <action name="currentLoans"
                class="com.action.LoanAction"
                method="loansList">
            <result name="success">/jsp/loans_list.jsp</result>
            <result name="error">/jsp/loans_list.jsp</result>
        </action>
    </package>
</struts>